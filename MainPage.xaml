<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tesoura.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                x:Name="round"
                Text="Round"
                />
            <Label
                x:Name="nameplayer"
                Text="Jogador"
                Margin="10"
                />
            <Entry x:Name ="player"
                Placeholder="Escreva o seu nome"/>
            <Image
                x:Name="papel"
                Source="papel.jpg"
                WidthRequest="100"
          
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
